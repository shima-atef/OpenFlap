<%= render "navbar" %>


<table>
  <thead>
    <tr>
    <th>ID</th>
      <th>Name</th>
      <th>Type</th>
      <th>Created by</th>
      <th>Created at</th>
      <th>Submissions</th>
    </tr>
  </thead>
  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
       <td><%=  exercise.id %></td>
        <td><%= link_to exercise.title , exercise%></td>
        <td><%= exercise.exercise_type %></td>
        <td><%= exercise.user.email %></td>
        <td><%= exercise.created_at %></td>
        <td><%= link_to Submission.where(exercise_id: exercise.id).count, exercise_submissions_path(exercise) %></td>
      </tr>
    <% end %>
  </tbody>
</table>