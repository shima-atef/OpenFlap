<!DOCTYPE html>
<html lang="en">
  <head>
      <%= stylesheet_link_tag "tables" %>

  </head>
  <body>
<div class="container-fluid mt-4">
  <h1 class="text-center heading">My Exercises</h1>

  <div class="table-responsive">
    <table  id="table" class="table table-striped">
      <thead>
        <tr>
          <th class="text-center">ID</th>
          <th class="text-center">Link</th>
          <th class="text-center">Type</th>
          <th class="text-center">Created At</th>
          <th class="text-center">Submissions</th>
         
        </tr>
      </thead>
      <tbody>
        <% @exercises.each do |exercise| %>
          <tr>
            <td><%= exercise.id %></td>
            <td><%= link_to "Show exercise", exercise_path(exercise) %></td>
            <td><%= exercise.exercise_type %></td>
            <td><%= exercise.created_at %></td>
            <td><%= link_to Submission.where(exercise_id: exercise.id).count, exercise_submissions_path(exercise) %></td>
            <td><%= button_to "Delete", exercise_path(exercise), method: :delete, data: { confirm: "Are you sure you want to delete this exercise?" } %></td> 
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<script>
  $(document).ready(function () {
    $('#table').DataTable({
      // Disable the searching 
      // of the DataTable
      searching: false
    });
  });
</script>

</body>
</html>