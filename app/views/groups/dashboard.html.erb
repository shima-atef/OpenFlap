<%= stylesheet_link_tag 'groups' %>

<h1 style="color: black;">Dashboard</h1>
<h2><%= link_to @group.title, group_path(@group), class: 'group-link' %></h2>
<table>
  <thead>
    <tr>
      <th>Member</th>
      <% @exercises.each do |exercise| %>
        <th><%= exercise.title %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.user.first_name.to_s+" "+member.user.last_name.to_s %></td>
        <% @exercises.each do |exercise| %>
          <td>
            <% submission = Submission.where(user_id: member.user.id, exercise_id: exercise.id).order(grade: :desc).first %>
            <% if submission %>
              <%= link_to submission.grade, submission %>
            <% else %>
              Not Attempted
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add Members', new_group_member_path(group_id: @group.id), class: 'btn btn-primary' %>
