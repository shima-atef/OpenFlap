<!DOCTYPE html>
<html lang="en">
  <head>
    <%= stylesheet_link_tag "logs" %>
    <title>profile</title> 
  </head>
  <body>
  <div class="container-fluid mt-5">
  <div class="row">
     <h1 class=" profile text-center mt-2 mb-5">Edit Profile</h1>
    <div class="col-md-3 mb-4 mt-5">
    <%# left side %>
      <ul class="profile_list d-flex flex-column">
        <li class="my-4"><i class="fa-solid fa-user"></i><%= link_to 'View Profile', users_profiles_show_path,class: 'my-link'%></li>
        <li class="my-4"><i class="fa-sharp fa-solid fa-eye"></i><%= link_to 'My exercises', user_exercises_path(@user),class: 'my-link'%></li>
        <li class="my-4"><i class="fa-solid fa-paper-plane"></i><%= link_to 'My Submissions', user_submissions_path(@user),class: 'my-link' %></li>
        <li class="my-4"><i class="fa-solid fa-plus"></i><%= link_to "Create New Exercise", new_exercise_path,class: 'my-link'%></li>
        <li class="my-4"><i class="fa-solid fa-sign-out"></i><%= link_to 'Sign out', destroy_user_session_path,class: 'my-link', method: :delete %></li>
      </ul>
    </div>
    <%# end left side %>
  <div class="col-md-8 offset-md-1 mb-4">
  <div class="info">
    <h5 class="mt-5">BASIC INFO</h5>
  </div>
  <div class="horizontal_line mt-5"></div>
    
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal my-form my-4" }) do |f| %>
 <div class="form_instruction">
    <%= render "devise/shared/error_messages", resource: resource %>
</div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
       
    <div class="row">
      <div class="form-group col-md-6 my-3">
        <%= f.label :first_name,"FIRST NAME",class: "input-label" %>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
      <div class="form-group col-md-6 my-3">
        <%= f.label :last_name,"LAST NAME",class: "input-label" %>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
    </div>
    
    <div class="col">
      <div class="form-group my-3">
        <%= f.label :email ,"EMAIL",class: "input-label"%>
        <%= f.text_field :email, class: "form-control" %>
     </div>
</div>
      
      <%# for password %>

      <% if resource.encrypted_password.present? %>
        <div class="form-group my-4">
          <%= f.label :password,"PASSWORD",class: "input-label" %>
          <i class="form_instruction">(leave this field blank if you don't want to change your password)</i>            
          <% if @minimum_password_length %>
            <em class="form_instruction"><%= @minimum_password_length%> characters minimum</em>
          <% end %>
          <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
         
        </div>

        <div class="form-group my-4">
          <%= f.label :password_confirmation,"PASSWORD CONFIRMATION", class: "input-label" %>
          <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
        </div>

        <div class="form-group my-4">
          <%= f.label :current_password,"CURRENT PASSWORD", class: "input-label" %>
        
           <i class="form_instruction">(We need your current password to confirm your changes)</i>
      
          <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
        </div>
      <% end %>

      <div class="form-group my-4">
        <%= f.submit "Save Change", class: "btn" %>
        <%= link_to "Back", :back, class: "btn" %>
      </div>
    </div>
  <% end %>
</div>
    </div>
    </div>
  </body>
</html>