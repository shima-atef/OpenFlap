<!DOCTYPE html>
<html lang="en">
  <head>
    <%= stylesheet_link_tag "logs.css" %>
  </head>

<body class="log">
  <div class="container mb-3">
    <div class="row justify-content-center">
      <div class="col-lg-5 col-md-9 col-sm-12">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-signin' }) do |f| %>

          <%= render "devise/shared/error_messages", resource: resource %>

          <h2 class="text-center mb-5">Sign Up</h2>

          <div class="row g-1">
            <div class="col-md-6 mb-3">
              <div class="form-group">
                <%= f.label :first_name %>
                <%= f.text_field :first_name, class: 'form-control', name: 'user[first_name]', required: true %>
              </div>
            </div>
            <div class="col-md-6 mb-3">
              <div class="form-group">
                <%= f.label :last_name %>
                <%= f.text_field :last_name, class: 'form-control', name: 'user[last_name]', required: true %>
              </div>
            </div>
          </div>

          <div class="form-group mb-3">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', required: true %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', required: true %>
          </div>

          <div class="form-group mb-4">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', required: true %>
          </div>

          <div class="form-group">
            <%= f.submit "Sign up", class: 'btn Log' %>
          </div>

        <% end %>

        <%# <%= render "devise/shared/links" %> 
      </div>
    </div>
  </div>
</body>
    </html>